@import 'nib'
@import 'lost'
@import 'rupture'

rupture.scale = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'

// edit(grey)

.edit
  edit(red)

focus()
  animation focus-fade 5s forwards
  @keyframes focus-fade
    0%
      background #fcf8e3
      
.big
  font-size 120%


.focus-bar
  margin-top 20px
  background-color #F5F5F5
  border-top 1px solid #E5E5E5
  padding 20px
  text-align center

table .date
  white-space nowrap
  
.label-etai
  background-color #337ab7

.label-critique
.label-urgent
.label-important
  background-color #d9534f
  
.label-interne
  background-color #f0ad4e
  
.label-bug
  background-color #5bc0de
  
.label-feature
.label-fonctionnalite
  background-color #5cb85c
  
.focus, table tbody tr:first-child
  focus()
  
.sidebar ul
  padding-left 15px
  
.infos
  margin-top 20px
  color #BBB
  
.ticket-comment
  margin-bottom 80px
  margin-left 30px
  margin-top 20px