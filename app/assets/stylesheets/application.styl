@import 'nib'
@import 'lost'
@import 'rupture'

// edit(grey)

focus()
  animation focus-fade 5s forwards
  @keyframes focus-fade
    0%
      background #fcf8e3

rupture.scale = 0 400px 600px 800px 1050px 1800px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 'hd'

table .date
  white-space nowrap
  
.label-etai
  background-color #337ab7

.label-critique
.label-urgent
.label-important
  background-color #d9534f
  
.label-interne
  background-color #f0ad4e
  
.label-bug
  background-color #5bc0de
  
.label-feature
.label-fonctionnalite
  background-color #5cb85c
  
.focus, table tbody tr:first-child
  focus()