<div class="page-header">
  <h2>Timeline</h2>
</div>

<% @activities.each do |activity| %>
  <div class="well">  
    <% if activity.owner %>
      <%= link_to activity.owner.email, activity.owner %>
    <% end %>
    <%= render_activity activity %>
    <div class="text-right">
      <small><%= activity.created_at.localtime.strftime("%d/%m/%y %H:%M") %></small>
    </div>
  </div>
<% end %>