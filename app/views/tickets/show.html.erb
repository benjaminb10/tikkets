<div class="text-right">
  <% if can? :update, @ticket %>
    <%= link_to edit_ticket_path(@ticket), :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-pencil"></span>
      Editer
    <% end %>
  <% end %>
</div>

<h3><%= @ticket.long_title %></h3>
<% if @ticket.url %>
  <h5>Url : <%= auto_link(@ticket.url) %></h5>
<% end %>

<br/><br/>

<% if not @ticket.body.blank? %>
  <div class="big">
    <%= auto_link(@ticket.body) %>
    <br/>
  </div>
<% end %>

<div class="text-right infos">
  <% @ticket.tags.each do |tag| %> <%= link_to tag, '#', class: "label label-default label-#{tag}" %><% end %><br/>
  <small><em><%= @ticket.created_at.localtime.strftime("%d/%m/%y %H:%M") %></em></small><br/>
  <small><em><%= @ticket.user.email %></em></small>
</div>

<br/>

<h3>RÃ©ponses <small>(<%= @ticket.comments.count %>)</small></h3>

<div class="row">
  <div class="col-sm-11">
    <% @ticket.comments.each do |comment| %>
      <div class="ticket-comment <%= 'focus' if comment == @ticket.comments.last %>">
        <%= auto_link(h(comment.body)) %>
        <br/><br/>
        <div class="text-right infos">
          <small><em><%= comment.created_at.localtime.strftime("%d/%m/%y %H:%M") %></em></small><br/>
          <small><em><%= comment.user.email %></em></small>
        </div>
      </div>
      <hr/>
    <% end %>
  </div>
</div>


<h5>Commenter :</h5>
<%= form_for([@ticket, @ticket.comments.build], :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_area :body, rows: "4", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit 'Commenter', :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>