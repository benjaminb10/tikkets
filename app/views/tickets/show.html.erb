<div class="page-header">
  <%= link_to tickets_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Retour
  <% end %>
  <%= link_to edit_ticket_path(@ticket), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editer
  <% end %>
  <h4><%= @ticket.title %></h4>
</div>

<div class="well">
  <%= @ticket.body %>
</div>

<br/>

<div class="row">
  <div class="col-sm-10">
    <% @ticket.comments.each do |comment| %>
      <div class="well">
        <%= comment.body %>
      </div>
    <% end %>
  </div>
</div>


<h4>Répondre :</h4>
<%= form_for([@ticket, @ticket.comments.build], :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.text_area :body, rows: "4", :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.submit 'Répondre', :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>